@model OrderVM

@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}
<html>

<head>
    <style>
        body {
            margin-top: 20px;
            background: #eee;
        }

        .ui-w-40 {
            width: 40px !important;
            height: auto;
        }

        .card {
            box-shadow: 0 1px 15px 1px rgba(52, 40, 104, .08);
        }

        .ui-product-color {
            display: inline-block;
            overflow: hidden;
            margin: .144em;
            width: .875rem;
            height: .875rem;
            border-radius: 10rem;
            -webkit-box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15) inset;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15) inset;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <div class="container px-3 my-5 clearfix">
        <!-- Shopping cart table -->
        <div class="card">
            <div class="card-header">
                <h2>Your Order</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <!-- Set columns width -->
                                <th class="text-center py-3 px-4" style="min-width: 400px;">Product Name &amp; Details
                                </th>
                                <th class="text-right py-3 px-4" style="width: 100px;">Price</th>
                                <th class="text-center py-3 px-4" style="width: 120px;">Quantity</th>
                                <th class="text-right py-3 px-4" style="width: 100px;">Total</th>
                                <th class="text-center align-middle py-3 px-0" style="width: 40px;"><a href="#"
                                        class="shop-tooltip float-none text-light" title=""
                                        data-original-title="Clear cart"><i class="ino ion-md-trash"></i></a></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model.Carts)
                        {
                            <tbody>
                                @foreach (var obj in Model.Products)
                                {
                                    <tr>
                                        <td class="p-4">
                                            <div class="media align-items-center">
                                                <img src="@await Component.InvokeAsync("Image", new { FileCode = obj.ProductPhoto.FileCode })"
                                                    class="d-block ui-w-40 ui-bordered mr-4" alt="">

                                                <div class="media-body">
                                                    <a asp-action="Item" asp-controller="Home" asp-route-id="@item.ProductId"
                                                        class="d-block text-dark">@obj.Title</a>
                                                    @foreach (var adress in Model.Adresses)
                                                    {
                                                        <small>
                                                            <span class="text-muted">@adress.Title:</span>
                                                            <span class="text-muted">@adress.AdressDetail </span>
                                                            <span class="text-muted">@adress.City </span>
                                                            <span class="text-muted">@adress.Zip </span>
                                                        </small>
                                                    }

                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-right font-weight-semibold align-middle p-4">@obj.Price</td>
                                        <td class="align-middle p-4"><input type="text" class="form-control text-center"
                                                value="@item.Quantity"></td>
                                        <td class="text-right font-weight-semibold align-middle p-4">@item.Total</td>
                                        <td class="text-center align-middle px-0"><a href="#"
                                                class="shop-tooltip close float-none text-danger" title=""
                                                data-original-title="Remove">Ã—</a></td>
                                    </tr>
                                }

                            </tbody>
                        }





                    </table>
                </div>


              

            </div>
        </div>
    </div>
</body>

</html>
