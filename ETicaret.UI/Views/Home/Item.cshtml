<!DOCTYPE html>
<html lang="zxx">

<body>

	<section class="banner-bottom">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					
					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<a href="single.html">
									 <img src="@await Component.InvokeAsync("Image", new { FileCode = Model.FileCode })" alt="">
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									@* <li>
										<a href="#">
											<i class="far fa-calendar-alt"></i>@(((DateTime)item.CreatedDateTime).ToString("dd-MM-yyyy"))</a>
									</li> *@
									<li class="mx-2">
										<a href="#">
											<i class="far fa-thumbs-up"></i> 201 Likes</a>
									</li>
									<li>
										<a href="#">
											<i class="far fa-comment"></i> 15 Comments</a>
									</li>
									
								</ul>
							</div>
						</div>

						<h3>
							<a href="single.html">@Model.Title</a>
						</h3>
						<p>@Model.Description</p>
						<a asp-controller="Blog" asp-action="Index" class="btn btn-primary read-m">Haberlere Geri Dön</a>
					</div>
					

					@await Component.InvokeAsync("CommentListByBlog",new {id = ViewBag.i})

					@* @await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml") *@
					@* @await Component.InvokeAsync("AddComment")  *@
					<div class="comment-top">
						<h4>Fikrinizi Paylaşın</h4>
						<div class="comment-bottom">
							<form asp-action="BlogReadAll" asp-controller="Blog" method="post">
								<input class="form-control" type="text" name="CommentUserName" placeholder="Name" required="">
								

								<input class="form-control" type="text" name="CommentTitle" placeholder="Subject" required="">

								<textarea class="form-control" name="CommentContent" placeholder="Message..." required=""></textarea>
								<button href type="submit" class="btn btn-primary submit">Submit</button>
							</form>
						</div>
					</div> 

					@* @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml") *@
					


					
				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						
						@* @await Component.InvokeAsync("CategoryList") *@
						
								

							
						</div>
						
						
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
</body>

</html> 