@model IEnumerable<Category>
@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Kategori Listesi</h2>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-stiped" style="width: ;100%">
        <thead>
            <tr>
                <th>
                    Kategori Başlığı
                </th>
                <th>
                    Kategori Açıklaması
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td width="30%">
                        @obj.Description
                        
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                          
                               <a asp-controller="Product" asp-action="SubCategory" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Seç</a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>