 @model IEnumerable<Product>
 <div>
        <section class="product_section layout_padding">
            <div class="container">
                
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-lg-4">
                            <div class="box">
                                <div class="img-box">
                                    <a asp-controller="Home" asp-action="Item" asp-route-id="@item.Id">
                                        <img src="@await Component.InvokeAsync("Image", new { FileCode = item.ProductPhoto.FileCode })"
                                            alt="">
                                    </a>
                                    @* <a href="" class="add_cart_btn">
                                <span>
                                Add To Cart
                                </span>
                                </a> *@
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        <a asp-action="Item" asp-controller="Home" asp-route-id="@item.Id">
                                            @item.Title

                                        </a>
                                    </h5>
                                    <div class="product_info">
                                        <h5>
                                            <span>@item.Price $</span>
                                        </h5>
                                        <div class="star_container">
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                            <i class="fa fa-star" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
