@model IEnumerable<Comment>

<div class="comment-top">

        @{
            if (Model.Count()==0)
            {
                <h4>Bu posta henüz yorum yapılmadı, ilk yorumu siz yazın... </h4>
            }
            else{
                <h4>Yorumlar</h4>
            }

        }
    @foreach (var item in Model)
    {
        <div class="media">
             <img src="~/item/149071.png" alt="" class="img-fluid" width="100" height="100" />
             <br>
           
            <div class="media-body">
                
                <h2>@item.CommentUsername</h2>
                
                <a>@item.Content</a>
                <br>
                 <a>@item.CreatedTime</a>
                 @if(User.Identity.Name == @item.CommentUsername)
                 {
                    <form method="post" asp-action="DeleteComment" asp-controller="Home" asp-route-id="@item.Id">
                         <button  type="submit">Delete</button>
                    </form>
                    
                 }
                 
            </div>
        </div>
        <br>
    }
</div>