@model CategoryVM
@{
    ViewData["Title"] = "Create";
}
<form asp-controller="Category" asp-action="Create" method="post">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kategori Ekle</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Title">Kategori Başlığı</label>
            <input asp-for="Category.Title" class="form-control" />
            <span asp-validation-for="Category.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Description">Kategori Açıklaması</label>
            <input asp-for="Category.Description" class="form-control" />
            <span asp-validation-for="Category.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="widht:150px">Oluştur</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="150px">
            Listeye Dön
        </a>
    </div>
</form>
@section Scripts
{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
