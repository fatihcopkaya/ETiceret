@model CommentVM

<html>

<head>
    <style>
        body {
            margin-top: 20px;
            background: #eee;
        }

        .ui-w-40 {
            width: 40px !important;
            height: auto;
        }

        .card {
            box-shadow: 0 1px 15px 1px rgba(52, 40, 104, .08);
        }

        .ui-product-color {
            display: inline-block;
            overflow: hidden;
            margin: .144em;
            width: .875rem;
            height: .875rem;
            border-radius: 10rem;
            -webkit-box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15) inset;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15) inset;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <div class="container px-3 my-5 clearfix">
        <!-- Shopping cart table -->
        <div class="card">
            <div class="card-header">
                <h2>Comments</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <!-- Set columns width -->
                                <th class="text-center py-3 px-4" style="min-width: 400px;">Product Name &amp; Details
                                </th>
                                <th class="text-center align-middle py-3 px-0" style="width: 40px;"></th>
                            </tr>
                        </thead>


                        <tbody>
                            @for (int i = 0; i < Model.Products.Count; i++)
                            {
                                <tr>



                                    <td class="p-4">
                                        <div class="media align-items-center">
                                            <img src="@await Component.InvokeAsync("Image", new { FileCode = @Model.Products[i].ProductPhoto.FileCode })"
                                                class="d-block ui-w-40 ui-bordered mr-4" alt="">

                                            <div class="media-body">
                                                <a asp-action="Item" asp-controller="Home"
                                                asp-route-id="@Model.Products[i].Id"
                                                    class="d-block text-dark">@Model.Products[i].Title</a>
                                                <small>
                                                    <span class="text-muted">@Model.Comments[i].CommentUsername</span>
                                                    <span class="text-muted"> @Model.Comments[i].CreatedTime </span>
                                                    <span class="text-muted">@Model.Comments[i].Content</span>
                                                </small>
                                            </div>
                                        </div>
                                    </td>


                                   <form asp-action="Delete" asp-controller="Comment" method="post" asp-route-id="@Model.Comments[i].Id"> 
                                    <td class="text-center align-middle px-0">
                                        <button type="submit" class="btn btn-lg btn-primary mt-2">
                                            Delete
                                        </button>
                                    </td>
                                     </form> 













                                </tr>
                            }


                        </tbody>






                    </table>
                </div>




            </div>
        </div>
    </div>
</body>

</html>
